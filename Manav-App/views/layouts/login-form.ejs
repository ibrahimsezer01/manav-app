<div class="contact_section layout_padding my-4">
    <div class="container">
        <div class="row align-items-center">
            <div>
                <h1 class="about_taital">Oturum Açın</h1>
                <% if (typeof message != "undefined") { %>
                <div class="alert alert-warning">
                    <%= message %>
                </div>
                <% } %>

                <form method="post">
                    <div class="mb-3">
                        <label for="email" class="form-label">Email</label>
                        <input type="email" class="form-control" id="email" name="email" value="<%= typeof email != "undefined" ? email : "" %>" required>
                    </div>
                    <div class="mb-3">
                        <label for="password" class="form-label">Şifre</label>
                        <input type="password" class="form-control" id="password" name="password" required>
                    </div>
                    <div class="mb-3">
                        <button type="submit" class="btn btn-warning">Giriş Yap</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
